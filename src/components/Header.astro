---
interface Props {
  variant?: 'default' | 'alt'
}

const { variant = 'default' }: Props = Astro.props
import NavLogo from './NavLogo.astro'
import NavMenu from './NavMenu.astro'
---

<header class='header' id='header'>
  <nav class='nav custom-container'>
    <NavLogo variant={variant} />
    {variant === 'default' ? <NavMenu /> : null}
    <i class='bx bx-moon change-theme' id='theme-button'></i>
  </nav>
</header>
<script>
  function scrollHeader() {
    const header = document.getElementById('header') as HTMLElement

    // When the sccroll is greater that 50 viewport height, add the scroll-header class to the header tag
    if (window.scrollY >= 50) header.classList.add('scroll-header')
    else header.classList.remove('scroll-header')
  }

  window.addEventListener('scroll', scrollHeader)
</script>
